configuration {
  font: "Terminus 9";
  show-icons: true;
  icon-theme: "Papirus";
  display-drun: "ï€‚";
  drun-display-format: "{name}";
  disable-history: false;
  fullscreen: false;
  hide-scrollbar: true;
  sidebar-mode: false;
}

@import "colors.rasi"

window {
  transparency: "real";
  background-color: @background;
  text-color: @foreground;
  border: 0px;
  border-color: @background;
  border-radius: 0;
  width: 300px;
  location: center;
  x-offset: 0;
  y-offset: 0;
}

prompt {
  enabled: true;
  padding: 11px 15px 10px 15px;
  background-color: @background;
  text-color: @color15;
  font: "Iosevka Nerd Font 8";
}

entry {
  background-color: @background;
  text-color: @color15;
  placeholder-color: @color15;
  expand: true;
  horizontal-align: 0;
  placeholder: "Search...";
  padding: 12px 10px 10px 10px;
  margin: 0 0 0 0;
  blink: true;
}

inputbar {
  children: [prompt, entry];
  background-color: @background;
  text-color: @color15;
  expand: false;
  border:	0;
  border-radius: 0;
  border-color: @background;
  spacing: 0;
}

listview {
  background-color: @background;
  padding: 0;
  columns: 1;
  lines: 5;
  spacing: 5px;
  cycle: true;
  dynamic: true;
  layout: vertical;
}

mainbox {
  background-color: @background;
  border: 0;
  border-radius: 0;
  border-color: @background;
  children: [inputbar, listview];
  spacing: 0;
  padding: 0;
}

element {
  background-color: @background;
  text-color: @foreground;
  orientation: horizontal;
  border-radius: 0;
  padding: 6px 6px 6px -16px;
}

element-icon {
  size: 24px;
  border: 0;
}

element-text {
  expand: true;
  horizontal-align: 0;
  vertical-align: 0.5;
  margin: 0 2.5px 0 2.5px;
}

element selected {
  background-color: @background;
  text-color: @background;
  border: 0;
  border-radius: 0;
  border-color: @background;
}
