[module/battery]
type = internal/battery
; This is useful in case the battery never reports 100% charge
full-at = 94
; Use the following command to list batteries and adapters:
; $ ls -1 /sys/class/power_supply/
battery = BAT0
adapter = AC
poll-interval = 5
format-charging = <animation-charging><label-charging>
format-discharging = <ramp-capacity><label-discharging>
label-charging = "%percentage%%"
label-charging-foreground = ${colors.black}
label-charging-background = ${colors.green}
label-full = " ÔÆ£ ÔâÄ  %percentage%%"
label-full-foreground = ${colors.black}
label-full-background = ${colors.green}
ramp-capacity-0 = " ÔÆ§ ÔâÑ  "
ramp-capacity-1 = " ÔÆ§ ÔâÉ  "
ramp-capacity-2 = " ÔÆ§ ÔâÇ  " 
ramp-capacity-3 = " ÔÆ§ ÔâÅ  "
ramp-capacity-4 = " ÔÆ§ ÔâÄ  "
ramp-capacity-foreground = ${colors.black}
ramp-capacity-background = ${colors.green}
animation-charging-0 = " ÔÆ£ ÔâÑ  "   
animation-charging-1 = " ÔÆ£ ÔâÉ  "
animation-charging-2 = " ÔÆ£ ÔâÇ  "
animation-charging-3 = " ÔÆ£ ÔâÅ  "
animation-charging-4 = " ÔÆ£ ÔâÄ  "
animation-charging-framerate = 750
animation-charging-background = ${colors.green}
animation-charging-foreground = ${colors.black}

