configuration {
  font: "JetBrainsMono Nerd Font 10";
  disable-history: false;
  fullscreen: false;
  hide-scrollbar: true;
  sidebar-mode: false;
}

@import "colors.rasi"

window {
  width: 320px;
  height: "auto";
  transparency: "real";
  background-color: @nightBackground;
  border: 3px;
  border-color: @red;
  border-radius: 0;
  location: center;
  padding: 15px;
  x-offset: 0;
  y-offset: 0;
}

prompt {
  enabled: true;
  padding: 10px 0 10px 10px;
  background-color: @orange;
  text-color: @nightBackground;
  font: "JetBrainsMono Nerd Font 10";
}

textbox-prompt-colon {
  padding: 10px 0 10px 10px;
  font: "JetBrainsMono Nerd Font 10";
  text-style: bold;
  background-color: @orange;
  text-color: @nightBackground;
  expand: false;
  str: "‚è≥";
}

entry {
  background-color: @orange;
}

inputbar {
  children: [ textbox-prompt-colon, prompt ];
  background-color: @orange;
  text-color: @nightBackground;
  expand: false;
  border: 0;
  border-radius: 0;
  border-color: @red;
  spacing: 0;
}

listview {
  background-color: @nightBackground;
  padding: 0;
  columns: 1;
  lines: 5;
  spacing: 5px;
  cycle: true;
  dynamic: true;
  layout: vertical;
  margin: 10px 0 0 0;
}

mainbox {
  background-color: @nightBackground;
  border: 0;
  border-radius: 0;
  border-color: @nightBackground;
  children: [ inputbar, listview ];
  spacing: 0;
  padding: 0;
}

element {
  background-color: @nightBackground;
  text-color: @nightBackground;
  padding: 8px;
}

element-text {
  background-color: @nightBackground;
  text-color: @foreground;
}

element selected.normal {
  background-color: @blue;
  text-color: @nightBackground;
}

element-text selected.normal {
  background-color: @blue;
  text-color: @nightBackground;
}

scrollbar {
  background-color: @nightBackground;
  handle-color:     @nightBackground;
  handle-width:     0;
}
